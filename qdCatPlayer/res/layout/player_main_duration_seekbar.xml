<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="0dp"
    android:background="@android:color/white"
    >
		<LinearLayout
	    android:layout_width="0dp"
	    android:layout_weight=".15"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:padding="0dp"
	    android:background="@android:color/white"
	    >

		    <TextView
		        android:id="@+id/textView_last_duration"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="45:56"
		        android:layout_gravity="center"
		        />

		    <ImageButton
		        android:id="@+id/imageButton_repeat"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/repeat_auto"
		        android:scaleType="fitCenter"
		        android:background="@android:color/transparent"
		        android:layout_margin="5dp"
		        />

		</LinearLayout>
		<LinearLayout
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:padding="0dp"
	    android:layout_weight=".70"
	    android:background="@android:color/white"
	    >
		    <TextView
		        android:id="@+id/textView_song_index"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="3 trong so 46"
		        android:layout_gravity="center"
		        />
		    <SeekBar
		        android:id="@+id/seekBar_duration"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        
		        android:layout_gravity="center"
		        />
		</LinearLayout>
		<LinearLayout
	    android:layout_width="0dp"
	    android:layout_weight=".15"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:padding="0dp"
	    android:background="@android:color/white"
	    >

		    <TextView
		        android:id="@+id/textView_remain_duration"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="45:56"
		        android:layout_gravity="center"
		        />

		    <ImageButton
		        android:id="@+id/imageButton_shuffle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/shuffle_auto"
		        android:scaleType="fitCenter"
		        android:background="@android:color/transparent"
		        android:layout_margin="5dp"
		        />

		</LinearLayout>
</LinearLayout>
