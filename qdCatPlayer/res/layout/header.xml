<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp" >

        <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/header_bg_full"
        android:scaleType="fitXY"
        />
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:padding="0dp"
		    >
		    <!--  android:background="@color/header_blue_bg"  -->
		
		    <ImageButton
		        android:id="@+id/imageButton_back"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_margin="0dp"
		        android:layout_weight=".15"
		        android:padding="0dp"
		        android:src="@drawable/left_arrow_auto"
		        android:background="@android:color/transparent"
		        android:scaleType="fitCenter"
		        />
		    
		    <LinearLayout
		        android:id="@+id/imageButton_songname"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:src="@drawable/ic_launcher"
		        android:layout_weight=".70"
		        android:padding="0dp"
		        android:layout_margin="0dp"
		        android:orientation="vertical"
		        >
				        <HorizontalScrollView
				            android:id="@+id/horizontalScrollView_top"
				            android:layout_width="match_parent"
				            android:layout_height="0dp"
				            android:layout_weight=".33"
				            >
							
				            <TextView
				                android:text="top"
				                android:id="@+id/header_info_top"
				                android:layout_height="match_parent"
				                android:layout_width="wrap_content"
				                android:layout_gravity="center"
				                />
				        </HorizontalScrollView>
				        <HorizontalScrollView
				            android:id="@+id/horizontalScrollView_midle"
				            android:layout_width="match_parent"
				            android:layout_height="0dp"
				            android:layout_weight=".33"
				             >
				
				            <TextView
				                android:text="top"
				                android:id="@+id/header_info_midle"
				                android:layout_height="match_parent"
				                android:layout_width="wrap_content"
				                android:layout_gravity="center"
				                />
				        </HorizontalScrollView>
				        <HorizontalScrollView
				            android:id="@+id/horizontalScrollView_bottom"
				            android:layout_width="match_parent"
				            android:layout_height="0dp"
				            android:layout_weight=".33" >
				
				            <TextView
				                android:text="top"
				                android:id="@+id/header_info_bottom"
				                android:layout_height="match_parent"
				                android:layout_width="wrap_content"
				                android:layout_gravity="center"
				                />
				        </HorizontalScrollView>
		        	
		    	</LinearLayout>
		    <ImageButton
		        android:id="@+id/imageButton_list"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:src="@drawable/right_arrow_auto"
		        android:layout_weight=".15"
		        android:padding="0dp"
		        android:layout_margin="0dp"
		        android:scaleType="fitCenter"
		        android:background="@android:color/transparent"
		        />
		
		</LinearLayout>
</FrameLayout>
